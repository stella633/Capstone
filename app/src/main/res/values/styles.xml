<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppBackground">
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="TitleIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ComponentTitle">
        <item name="android:background">@drawable/component_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonMain">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DialogueText">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BadgeText">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_circle2</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
    </style>

    <style name="RadioText">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BioText">
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">#666</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ButtonBio">
        <item name="android:background">@drawable/button_circle3</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="TextFont">
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

</resources>
